    <script>
        const music = document.getElementById('backgroundMusic');
        const musicBtn = document.querySelector('.music-control');
        let isPlaying = false;

        // Tentar reproduzir automaticamente quando a pÃ¡gina carregar
        window.addEventListener('load', function() {
            music.volume = 0.3; // Volume em 30%
            music.play().then(() => {
                isPlaying = true;
                musicBtn.textContent = 'ğŸµ Pausar';
            }).catch(error => {
                // Se autoplay falhar (alguns navegadores bloqueiam), mostrar botÃ£o para play
                musicBtn.textContent = 'ğŸµ Tocar MÃºsica';
                isPlaying = false;
            });
        });

        function toggleMusic() {
            if (isPlaying) {
                music.pause();
                musicBtn.textContent = 'ğŸµ Tocar MÃºsica';
                isPlaying = false;
            } else {
                music.play();
                musicBtn.textContent = 'ğŸµ Pausar';
                isPlaying = true;
            }
        }
    </script>
